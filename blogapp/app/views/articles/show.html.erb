<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>
<hr>

<h3>Comments</h3>
<% @article.comments.each do |comment| %>
  <p>
    <strong>User:</strong>
    <%= comment.commenter %>

    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h3>Add new comment:</h3>
<%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>



 <%= link_to 'edit', edit_article_path(@article) %>
